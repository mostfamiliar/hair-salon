<!DOCTYPE html>
<html>
    <head>
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
        <link rel="stylesheet" href="/css/styles.css">
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
        <title>Hair Salon</title>
    </head>
    <body>
        <div class="container">
            <h1><i> <i class="material-icons">store</i> Hair Salon <i class="material-icons">store</i></i></h1>

            {% for stylist in stylists %}
            <h2>Stylists</h2>
            <ul>
                <li>stylist</li>
            </ul>
            {% endfor %}
        </div>

        <form method="/stylist" action="post">
            <div class="row">
              <div class="input-field col s6 offset-s2">
                    <label for="first_name">Enter new stylist</label>
                   <input placeholder="Name" name="sentence_input" type="text" class="validate" required>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                  <div class="center-align">
                  <button type="submit" class="waves-effect waves-light btn  indigo"> <i>SUBMIT<i></button>
                  </div>
              </div>
            </div>
        </form>
    </body>
</html>
